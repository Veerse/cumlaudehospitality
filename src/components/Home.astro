---
const properties = [
    {
        name: "The Metropolitan",
        location: "New York City",
        image: "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80",
        description: "Luxury urban retreat in the heart of Manhattan"
    },
    {
        name: "Sunset Coast Resort",
        location: "Malibu",
        image: "https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?w=800&q=80",
        description: "Beachfront paradise with breathtaking ocean views"
    },
    {
        name: "Alpine Grand Lodge",
        location: "Aspen",
        image: "https://images.unsplash.com/photo-1584132967334-10e028bd69f7?w=800&q=80",
        description: "Mountain elegance meets modern luxury"
    }
];

const services = [
    {
        icon: "üõéÔ∏è",
        title: "24/7 Concierge",
        description: "Personal assistance for all your needs, from restaurant reservations to exclusive experiences"
    },
    {
        icon: "üçΩÔ∏è",
        title: "Fine Dining",
        description: "World-class restaurants with Michelin-starred chefs and curated wine collections"
    },
    {
        icon: "üíÜ",
        title: "Spa & Wellness",
        description: "Rejuvenating treatments and state-of-the-art fitness facilities"
    },
    {
        icon: "üèõÔ∏è",
        title: "Event Spaces",
        description: "Elegant venues for weddings, conferences, and special celebrations"
    }
];

const stats = [
    { number: "15+", label: "Luxury Properties" },
    { number: "50K+", label: "Happy Guests" },
    { number: "25+", label: "Years of Excellence" },
    { number: "98%", label: "Guest Satisfaction" }
];

const testimonials = [
    {
        quote: "An unforgettable experience. The attention to detail and personalized service exceeded all expectations.",
        author: "Sarah Mitchell",
        role: "CEO, Mitchell & Associates"
    },
    {
        quote: "Cum Laude Hospitality has redefined luxury for me. Every stay feels like coming home to excellence.",
        author: "David Chen",
        role: "Travel Journalist"
    }
];
---

<!-- Hero Section -->
<section id="home" class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <img
                src="https://images.unsplash.com/photo-1445019980597-93fa8acb246c?q=80&w=3274&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                alt="Luxury Hotel"
                class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 text-center px-6 max-w-6xl mx-auto">
        <div class="mb-8">
            <p class="text-sm md:text-base text-yellow-400/90 tracking-[0.3em] uppercase font-light mb-4">
                Luxury Redefined
            </p>
            <h1 class="text-4xl md:text-6xl lg:text-7xl text-white font-light tracking-wide leading-tight">
                CUM LAUDE
                <span class="block text-2xl md:text-3xl lg:text-4xl mt-2 font-extralight tracking-[0.2em] text-white/80">
                    HOSPITALITY
                </span>
            </h1>
            <div class="w-24 h-[1px] bg-yellow-400/60 mx-auto mt-8 mb-8"></div>
            <p class="text-base md:text-lg text-gray-300/90 max-w-2xl mx-auto font-light leading-relaxed tracking-wide">
                Experience the art of refined luxury.
            </p>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-5 h-5 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-6 sm:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div>
                <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
                    Defining Excellence in
                    <span class="text-yellow-600 dark:text-yellow-400">Hospitality</span>
                </h2>
                <p class="text-lg text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
                    For over two decades, Cum Laude Hospitality has been synonymous with exceptional service
                    and unforgettable experiences. Our carefully curated collection of properties represents
                    the pinnacle of luxury accommodation.
                </p>
                <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
                    From bustling city centers to serene coastal retreats, each property is designed to
                    offer a unique experience while maintaining our unwavering commitment to excellence.
                </p>
                <div class="grid grid-cols-2 gap-6">
                    {stats.slice(0, 2).map((stat) => (
                            <div class="text-center sm:text-left">
                                <div class="text-4xl font-bold text-yellow-600 dark:text-yellow-400 mb-2">{stat.number}</div>
                                <div class="text-gray-600 dark:text-gray-400">{stat.label}</div>
                            </div>
                    ))}
                </div>
            </div>
            <div class="relative">
                <img
                        src="https://images.unsplash.com/photo-1564501049412-61c2a3083791?w=800&q=80"
                        alt="Luxury hotel lobby"
                        class="rounded-2xl shadow-2xl"
                />
                <div class="absolute -bottom-8 -left-8 bg-yellow-500 dark:bg-yellow-600 text-white p-6 rounded-xl shadow-xl max-w-xs">
                    <p class="font-semibold text-lg mb-1">Award-Winning Service</p>
                    <p class="text-sm">Recognized globally for excellence in hospitality</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Properties Section -->
<section id="properties" class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-6 sm:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
                Our Distinguished Properties
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                Each location offers a unique blend of local culture and world-class amenities
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {properties.map((property) => (
                    <div class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-2xl dark:shadow-gray-900/50 dark:hover:shadow-gray-900/75 transition-all duration-300">
                        <div class="aspect-w-16 aspect-h-12 overflow-hidden">
                            <img
                                    src={property.image}
                                    alt={property.name}
                                    class="w-full h-80 object-cover group-hover:scale-110 transition-transform duration-500"
                            />
                        </div>
                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
                        <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                            <h3 class="text-2xl font-bold mb-2">{property.name}</h3>
                            <p class="text-yellow-300 dark:text-yellow-400 font-medium mb-2">{property.location}</p>
                            <p class="text-white/90">{property.description}</p>
                        </div>
                    </div>
            ))}
        </div>

        <div class="text-center mt-12">
            <a href="#" class="inline-flex items-center text-yellow-600 dark:text-yellow-400 font-semibold hover:text-yellow-700 dark:hover:text-yellow-300 transition-colors">
                View All Properties
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-6 sm:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
                Exceptional Services
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                Every aspect of your stay is carefully curated to ensure an unforgettable experience
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {services.map((service) => (
                    <div class="text-center group">
                        <div class="w-20 h-20 mx-auto mb-6 bg-yellow-100 dark:bg-yellow-900/30 rounded-2xl flex items-center justify-center text-4xl group-hover:bg-yellow-200 dark:group-hover:bg-yellow-900/50 transition-colors duration-300">
                            {service.icon}
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{service.title}</h3>
                        <p class="text-gray-600 dark:text-gray-300 leading-relaxed">{service.description}</p>
                    </div>
            ))}
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-20 bg-gradient-to-r from-gray-900 to-gray-800 text-white">
    <div class="max-w-7xl mx-auto px-6 sm:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {stats.map((stat) => (
                    <div class="text-center">
                        <div class="text-5xl font-bold text-yellow-400 mb-2">{stat.number}</div>
                        <div class="text-gray-300 text-lg">{stat.label}</div>
                    </div>
            ))}
        </div>
    </div>
</section>

<!-- Experience Section -->
<section id="experience" class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-6 sm:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
                Guest Experiences
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                Don't just take our word for it - hear from our valued guests
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            {testimonials.map((testimonial) => (
                    <div class="bg-white dark:bg-gray-700 p-8 rounded-2xl shadow-lg dark:shadow-gray-900/50">
                        <div class="flex mb-4">
                            {[...Array(5)].map((_, i) => (
                                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                            ))}
                        </div>
                        <p class="text-gray-600 dark:text-gray-300 mb-6 italic">"{testimonial.quote}"</p>
                        <div>
                            <p class="font-semibold text-gray-900 dark:text-white">{testimonial.author}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">{testimonial.role}</p>
                        </div>
                    </div>
            ))}
        </div>
    </div>
</section>

<!-- CTA Section -->
<section id="contact" class="py-24 bg-gray-700 relative overflow-hidden">
    <div class="max-w-4xl mx-auto px-6 sm:px-8 text-center relative z-10">
        <div class="inline-block mb-8">
                <p class="text-sm text-yellow-400/70 tracking-[0.3em] uppercase font-light">
                    Begin Your Journey
                </p>
            <div class="w-16 h-[1px] bg-yellow-400/40 mx-auto mt-4"></div>
        </div>

        <p class="text-lg text-gray-400 mb-12 max-w-2xl mx-auto font-light leading-relaxed">
            Allow us to curate an unforgettable stay tailored to your most discerning preferences
        </p>

        <a href="mailto:info@cumlaudehospitality.com" class="inline-flex items-center justify-center group">
            <span class="px-10 py-5 text-sm tracking-[0.2em] uppercase font-light text-white border border-yellow-400/50 hover:border-yellow-400 transition-all duration-500 relative overflow-hidden">
                <span class="relative z-10">Contact Us</span>
                <span class="absolute inset-0 bg-yellow-400/10 transform -translate-x-full group-hover:translate-x-0 transition-transform duration-500"></span>
            </span>
        </a>

        <div class="mt-8 text-gray-500 text-sm font-light">
            <p>Available 24/7 for your convenience</p>
        </div>
    </div>
</section>

<style>
    @keyframes blob {
        0% {
            transform: translate(0px, 0px) scale(1);
        }
        33% {
            transform: translate(30px, -50px) scale(1.1);
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }
        100% {
            transform: translate(0px, 0px) scale(1);
        }
    }

    .animate-blob {
        animation: blob 7s infinite;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }

    .animation-delay-4000 {
        animation-delay: 4s;
    }

    /* Custom animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    #home > div:nth-child(2) > div {
        animation: fadeInUp 1.5s ease-out;
    }
</style>