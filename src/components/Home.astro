        location: "New York City",
        image: "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80",
        description: "Luxury urban retreat in the heart of Manhattan"
    },
    {
        name: "Sunset Coast Resort",
        location: "Malibu",
        image: "https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?w=800&q=80",
        description: "Beachfront paradise with breathtaking ocean views"
    },
    {
        name: "Alpine Grand Lodge",
        location: "Aspen",
        image: "https://images.unsplash.com/photo-1584132967334-10e028bd69f7?w=800&q=80",
        description: "Mountain elegance meets modern luxury"
    }
];

const services = [
    {
        icon: "üè®",
