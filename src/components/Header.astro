---
const { title = "Cum Laude Hospitality" } = Astro.props;

const brand = {
    name: "Cum Laude",
    subtitle: "Hospitality"
};

const navigationItems = [
    { name: "Home", href: "#home" },
    { name: "About", href: "#about" },
    { name: "Properties", href: "#properties" },
    { name: "Services", href: "#services" },
    { name: "Experience", href: "#experience" }
];

const contactButton = {
    text: "Contact Us",
    href: "#contact"
};
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 dark:bg-gray-900/95 backdrop-blur-lg border-b border-black/5 dark:border-white/10 transition-all duration-300">
    <div class="max-w-7xl mx-auto flex items-center justify-between px-8 md:px-8 h-20 md:h-20">
        <!-- Logo/Brand -->
        <div class="flex-shrink-0">
            <a href="#home" class="flex flex-col leading-tight text-inherit no-underline">
                <span class="text-2xl md:text-2xl font-semibold text-gray-900 dark:text-white tracking-tight">Cum Laude</span>
                <span class="text-xs font-normal text-gray-600 dark:text-gray-400 uppercase tracking-widest -mt-0.5">Hospitality</span>
            </a>
        </div>

        <!-- Navigation Links -->
        <nav class="hidden md:flex items-center gap-10 flex-1 justify-center">
            {navigationItems.map((item) => (
                    <a href={item.href} class="nav-link relative py-2 text-gray-700 dark:text-gray-300 font-medium text-sm tracking-wide transition-all duration-300 hover:text-yellow-600 dark:hover:text-yellow-400 group">
                        {item.name}
                        <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-gradient-to-r from-yellow-600 to-yellow-300 dark:from-yellow-400 dark:to-yellow-200 transition-all duration-300 transform -translate-x-1/2 group-hover:w-full"></span>
                    </a>
            ))}
        </nav>

        <!-- Contact Button -->
        <div class="flex-shrink-0">
            <a href={contactButton.href} class="inline-flex items-center px-7 py-3 bg-gradient-to-br from-gray-900 to-gray-700 dark:from-gray-800 dark:to-gray-600 text-white font-semibold text-sm tracking-wide rounded-md transition-all duration-300 hover:bg-gradient-to-br hover:from-yellow-600 hover:to-yellow-400 hover:text-gray-900 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-yellow-600/30">
                {contactButton.text}
            </a>
        </div>
    </div>
</header>

<style>
    /* Smooth scroll behavior */
    html {
        scroll-behavior: smooth;
    }
</style>