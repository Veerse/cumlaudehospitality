---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;

---
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <Header title={title}/>
    </head>
    <body class="dark:bg-gray-900">
        <slot />
        <Footer />
    </body>
</html>